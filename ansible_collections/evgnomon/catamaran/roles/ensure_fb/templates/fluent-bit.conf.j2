[SERVICE]
    Flush        1
    Log_Level    info

[INPUT]
    Name         systemd
    Tag          host.*
    Path         /run/log/journal
    DB           {{ z_mount_workdir }}/fluentbit-journal.db
    Read_From_Tail On

[OUTPUT]
    Name         forward
    Match        *
    Host         {{ logs_node_addr }}
    Port         24224
    TLS          On
    TLS.verify   On
    TLS.ca_file  {{ z_mount_cert_ca_file }}
    TLS.crt_file {{ z_mount_cert_func_pub }}
    TLS.key_file {{ z_mount_cert_func_key }}
